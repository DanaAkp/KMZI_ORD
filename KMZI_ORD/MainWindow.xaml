<Window x:Class="KMZI_ORD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMZI_ORD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Background="LightBlue" x:Name="tbRes" Grid.Row="3"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="P = "/>
            <TextBox x:Name="tbMod" Width="30"/>
            <Label Content="Koeff: " Margin="10,0,0,0"/>
            <TextBox x:Name="tbKoeff" Width="292"/>
            <Button Click="Btn_Click" x:Name="btnOK" Content="OK" Margin="10,0,0,0" Width="30"/>
        </StackPanel>
    </Grid>
</Window>
